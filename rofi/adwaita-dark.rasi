/**
 * Rofi Adwaita-dark Theme
 *
 * This theme aims to mimic the Adwaita dark theme from the GNOME desktop.
 * It uses colors and styles that are as close as possible to the original.
 *
 * Designed to be used with the `drun` or `show` modes of Rofi.
 */

/* ========================================================================= */
/* --- Colors                                                            --- */
/* ========================================================================= */
* {
    /* Adwaita-dark palette */
    adw-bg-dark-dark: #1d1d20;
    adw-bg-dark-medium: #222226;
    adw-bg-dark-light: #38383b;
    adw-bg-dark-lighter: #434346;

    // adw-bg-color:     #242424;
    // adw-bg-color: #241f31;
    // adw-fg-color:     #dcdcdc;
    adw-fg-color: #f6f5f4;
    // adw-hover-color:  #dcdcdc;
    adw-hover-color:  #f6f5f4;
    // adw-sel-bg:       #4c8ad1;
    adw-sel-bg:       #3584e4;
    adw-sel-fg:       #ffffff;
    // adw-border-color: #3e3e3e;
    adw-border-color: #3d3846;
    adw-shadow:       rgba(0, 0, 0, 0.4);

    /* Rofi derived colors */
    // background-color:   @adw-bg-color;
    background-color:   @adw-bg-dark-medium;
    foreground-color:   @adw-fg-color;
    // border-color:       @adw-border-color;
    border-color:      @adw-bg-dark-lighter;
    selection-color:    @adw-sel-bg;
    selection-text-color: @adw-sel-fg;
}

/* ========================================================================= */
/* --- Main Window                                                       --- */
/* ========================================================================= */
window {
    background-color:   @background-color;
    border:             1px;
    border-color:       @border-color;
    border-radius:      12px;
    padding:            20px;
    height:             60%;
    width:              60%;
    x-offset:           0;
    y-offset:           0;
    anchor:             center;
    location:           center;
    // box-shadow:         inset 0 4px 12px 0 @adw-shadow;
    // box-shadow:         inset 0 4px 12px 0 @adw-shadow;
    // box-shadow:         0px 4px 12px 0px rgb(0 0 0 / 40%);
}

/* ========================================================================= */
/* --- Prompt and Input Bar                                              --- */
/* ========================================================================= */
textbox-prompt-colon {
    expand: false;
    str: " "; /* Empty space to remove the colon */
    background-color: @background-color;
    text-color: @foreground-color;
}

entry {
    background-color:   @background-color;
    text-color:         @foreground-color;
    padding:            8px;
    border:             1px solid;
    border-color:       @border-color;
    border-radius:      6px;
    margin:             0 0 10px 0;
}

/* ========================================================================= */
/* --- List View (Results)                                               --- */
/* ========================================================================= */
listview {
    background-color:   @background-color;
    border:             1px solid;
    border-color:       @border-color;
    border-radius:      6px;
    margin:             10px 0 0 0;
    padding:            5px;
    // cycle:              false;
    cycle:              true;
    scrollbar:          false;
}

element {
    background-color:   transparent;
    text-color:         @foreground-color;
    padding:            8px;
    border-radius:      4px;
    spacing:            12px;
}

element selected {
    background-color:   @selection-color;
    text-color:         @selection-text-color;
    border-radius:      4px;
}

/* ========================================================================= */
/* --- Icons and Text                                                    --- */
/* ========================================================================= */
element-icon {
    size:               2.0ch;
    background-color:   transparent;
    text-color:         inherit;
    horizontal-align:   0.5;
}

element-text {
    background-color:   transparent;
    text-color:         inherit;
}

/* ========================================================================= */
/* --- Message and Status Lines (if used)                                --- */
/* ========================================================================= */
message {
    background-color:   @background-color;
    text-color:         @foreground-color;
    padding:            8px;
    border:             1px solid;
    border-color:       @border-color;
    border-radius:      6px;
    margin:             10px 0 0 0;
}
